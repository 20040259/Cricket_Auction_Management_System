@model Cricket_Auction.Web.ViewModels.CategoryViewModel

<div class="modal-header">
    <h5 class="modal-title">Edit Category</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
        @*<span aria-hidden="true">&times;</span>*@
    </button>
</div>

<form id="editForm" method="post">

    <div class="modal-body">
        <input type="hidden" name="ID" value="@Model.ID" />

        <div class="form-group">
            <label>Team Name</label>
            <input class="form-control" name="TeamName" value="@Model.TeamName" />
            <br />
        </div>

        <div class="form-group">
            <label>Team Description</label>
            <input class="form-control" name="TeamDescription" value="@Model.TeamDescription" />
            <br />
        </div>

        <div class="form-group">
            <label>Team Max Price</label>
            <input class="form-control" name="MaxPrice" value="@Model.MaxPrice" />
            <br />
        </div>

    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button class="btn btn-success" type="button" id="saveButton">Save</button>
    </div>

</form>



<script>

    $("#saveButton").click(function () {

        $.ajax({
            url: "@Url.Action("Edit", "Categories")",
            method: "post",
            data: $("#editForm").serialize()

        }).done(function (response) {
            $("#listingArea").html(response);
            $('#formModel').modal('toggle');
        });
    });

</script>
