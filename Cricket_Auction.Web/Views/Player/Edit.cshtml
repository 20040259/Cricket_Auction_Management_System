            <form id="editForm" method="post" action="/Player/Edit/">

                <div class="modal-body">

                    <div class="form-group">

                        <input type="hidden" name="ID" value="@Model.ID" />
                    </div>

                    @*<input type="file" name="ImageFile" onchange="preview()" required />
